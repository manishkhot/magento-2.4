<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
	<system>
		<tab id="lofalltab" translate="label" sortOrder="500">
			<label><![CDATA[Landofcoder - <a href="http://landofcoder.com" title="landofcoder.com - Premium Magento Module Club">landofcoder.com</a>]]></label>
		</tab>
		<section id="storelocator" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
			<class>separator-top</class>
			<label>StoreLocator</label>
			<tab>landofcoder</tab>
			<resource>Lof_StoreLocator::config_storelocator</resource>
			<group id="general" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>General Settings</label>
				<field id="enable" translate="label comment" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field id="route" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Route</label>
				</field>
				<field id="pagination" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Pagination List Store</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<comment><![CDATA[Enable/Disable Show Pagination. ]]></comment>
				</field>
				<field id="store_limit" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Store Limit</label>
					<comment><![CDATA[Limit number of stores will be show in list store when pagging on frontend.]]></comment>
				</field>
				<field id="store_perpage" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Store Per Page</label>
				</field>
				<field id="enable_category_filter" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable Category Filter</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<comment><![CDATA[Enable/Disable Show Category Filter Search. ]]></comment>
				</field>
				<field id="enable_tag_filter" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable Tag Filter</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<comment><![CDATA[Enable/Disable Show Tag Filter Search. ]]></comment>
				</field>
				<field id="enable_name_filter" translate="label comment" type="select" sortOrder="61" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable Name Filter</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<comment><![CDATA[Enable/Disable Show Name Filter Search. ]]></comment>
				</field>
				<field id="enable_city_filter" translate="label comment" type="select" sortOrder="62" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable City Filter</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<comment><![CDATA[Enable/Disable Show City Filter Search. ]]></comment>
				</field>
				<field id="enable_zipcode_filter" translate="label comment" type="select" sortOrder="62" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable Zipcode Filter</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<comment><![CDATA[Enable/Disable Show Zipcode Filter Search. ]]></comment>
				</field>
				<field id="enable_country_filter" translate="label comment" type="select" sortOrder="63" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable Country Filter</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<comment><![CDATA[Enable/Disable Show Country Filter Search. ]]></comment>
				</field>
				<field id="enable_state_filter" translate="label comment" type="select" sortOrder="64" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable State Filter</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<comment><![CDATA[Enable/Disable Show State Filter Search. ]]></comment>
				</field>
				<field id="seo_heading" translate="label comment" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>SEO</label>
					<frontend_model>Lof\StoreLocator\Block\Adminhtml\System\Config\Form\Field\Heading1</frontend_model>
				</field>
				<field id="enable_rewrite_url" translate="label comment" type="select" sortOrder="75" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable Rewrite Url</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<comment><![CDATA[Enable/Disable Rewrite Url for store locator item.]]></comment>
				</field>
				<field id="page_title" translate="label comment" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Page title</label>
				</field>
				<field id="seo_keywords" translate="label comment" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Meta KeyWords</label>
				</field>
				<field id="seo_description" translate="label comment" type="textarea" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Meta Description</label>
				</field>
				<field id="other_heading" translate="label comment" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Google API</label>
					<frontend_model>Lof\StoreLocator\Block\Adminhtml\System\Config\Form\Field\Heading1</frontend_model>
				</field>
				<field id="api_key" translate="label comment" type="text" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Key</label>
					<comment><![CDATA[Please register a google API key at <a href="https://developers.google.com/maps/web/" target="_blank">here</a>]]></comment>
				</field>
				<field id="locator_unit" translate="label comment" type="select" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Locator Units</label>
					<source_model>Lof\StoreLocator\Model\Config\Source\Unit</source_model>
				</field>
				<field id="default_locator_image" translate="label comment" type="text" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Default Store Locator Image Path</label>
					<comment><![CDATA[Upload the default image in the folder path: pub/media/ then use the file path of file input into the field. Example: input the value lof/storelocator/default.png<br/>It is file path of real file pub/media/lof/storelocator/default.png]]></comment>
				</field>
				<field id="autogeocode" translate="label comment" type="select" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable Auto GEO code</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
			</group>
			<group id="location" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Default Location Settings</label>
				<field id="address_preview" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Map</label>
					<frontend_model>Lof\StoreLocator\Block\Adminhtml\System\Config\Form\Field\Gmap</frontend_model>
				</field>
				<field id="location_lng" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Longitude</label>
				</field>
				<field id="location_lat" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Latitude</label>
				</field>
				<field id="zoom" translate="label comment" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Zoom</label>
				</field>
			</group>
			<group id="scheduled_import_settings" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Scheduled Import Location Settings</label>
				<field id="enable_cron_tab" translate="label comment" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable Cron Job</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field id="import_folder" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Import Folder Path</label>
					<comment><![CDATA[Input the folder path where you want to store the import CSV files. Default: <strong>pub/storelocator/</strong>]]></comment>
				</field>
			</group>
		</section>
	</system>
</config>